//////////HOW TO USE\\\\\\\\\\

---SOLVER---
iput:
	./solver 'grid_name' 'word_to_find'
output:
	('first_letter_coordonates')('last_letter_coordonates')

---Network---
input:
	./network_training 'network_save_file (optional)'
output:
	[Epoch 'current_epoch_number'] : 'number_training_test_successful'/'number_training_test_total' ('advencement'%)

input:
	./network_resolve 'letter_as_bmp_file'
output:
	Output: 'letter_ass_char'

---Rotation---
input:
	./rotation 'image_file' 'degrees'
output:
	# saves the rotated image

---Interface---
input:
	./interface
output:
	#displays new window
	#in new window, write 'path_name'
	#displays picture

---Image_save---
input:
	./image_save
output:
	#saves 1st letter of a predefined image as a new image

input:
	./image_save2 'image_path' 'x_coordonates' 'y_coordonates'
output:
	#saves 1st letter of image starting from given coordonates as a new image
